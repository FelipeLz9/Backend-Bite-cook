generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @map("_id")
  email    String  @unique
  name     String?
  password String
  Order    Order[]
}

model Dish {
  id          String  @id @map("_id")
  name        String
  description String
  price       Float
  image       String
  Order       Order[]
}

model Order {
  id        String   @id @map("_id")
  total     Float
  createdAt DateTime @default(now())
  userId    String
  User      User     @relation(fields: [userId], references: [id])
  dishId    String
  Dish      Dish     @relation(fields: [dishId], references: [id])
  staus     Boolean
}
